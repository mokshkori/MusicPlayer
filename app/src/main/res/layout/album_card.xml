<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/album_card_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:background="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <android.support.v7.widget.CardView
            android:id="@+id/zxcvbnm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/album_card_album_art"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/no_album_art"
                android:scaleType="centerCrop"/>

        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/album_card_album_name"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@color/Black"
            android:layout_below="@id/zxcvbnm"
            android:text="ALBUM"/>
        <TextView
            android:id="@+id/album_card_artist"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:textColor="@color/Black"
            android:layout_below="@id/album_card_album_name"
            android:text="ARTIST"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>
</RelativeLayout>